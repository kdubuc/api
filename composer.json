{

    "name": "kdubuc/api",

    "description": "API",

    "keywords": ["api"],

    "homepage": "https://github.com/kdubuc/api",

    "license": "CeCILL-B",

    "authors": [
        {
            "role": "Developer",
            "name": "Kevin DUBUC",
            "email": "kevindubuc62@gmail.com",
            "homepage": "http://kevindubuc.fr"
        }
    ],

    "require": {
        "php" : "^7.1",
        "psr/cache": "^1.0",
        "slim/slim": "^3.3",
        "ramsey/uuid": "^3.4",
        "league/tactician": "^1.0",
        "league/event": "^2.1",
        "league/fractal": "^0.16",
        "doctrine/collections": "^1.3",
        "container-interop/container-interop": "^1.1"
    },


    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11"
    },

    "autoload": {
        "psr-4": { "API\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "API\\Test\\": "tests/" }
    },

    "scripts": {
        "test": "vendor/bin/phpunit",
        "fix-cs": "php vendor/bin/php-cs-fixer fix src --level=symfony --fixers=align_double_arrow,align_equals,ordered_use,phpdoc_order,short_array_syntax"
    },

    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }

}
